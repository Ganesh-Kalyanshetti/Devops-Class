pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ganesh-Kalyanshetti/Devops-Class.git'
            }
        }

        stage('Run Python Script') {
            steps {
                echo "Running Python code"
                sh 'python3 one.py' // change 'one.py' to your actual Python filename
            }
        }
    }

    post {
        success {
            echo 'Build and execution successful!'
        }
        failure {
            echo 'Failed to run Python script!'
        }
    }
}
