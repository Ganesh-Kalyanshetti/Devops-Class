pipeline {
    // ... other stages
    post {
        failure {
            emailext (
                to: 'ganeshkalyanshetti2003@example.com',
                subject: "FAILED: Build ${env.JOB_NAME}",
                body: "Build failed: ${env.BUILD_URL}"
            )
        }
        success {
            emailext (
                to: 'ganeshkalyanshetti2003@example.com',
                subject: "SUCCESSFUL: Build ${env.JOB_NAME}",
                body: "Build Successful: ${env.BUILD_URL}"
            )
        }
    }
}
