pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                
                    echo "Building..."
                    sh "exit 1"
                
            }
        }
    }

    post {
        failure {
            emailext (
                to: 'ganeshkalyanshetti7@gmail.com',
                from: 'MSRIt <ganeshkalyanshetti7@gmail.com>',
                subject: "FAILED: Build ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Build failed: ${env.BUILD_URL}"
            )
        }
        success {
            emailext (
                
                subject: "SUCCESSFUL: Build ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Build Successful: ${env.BUILD_URL}"
            )
        }
    }
}
